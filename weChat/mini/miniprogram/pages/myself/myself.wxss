.avatar{
    position:relative;
    height:280rpx;
    background-image: linear-gradient(to right, #fff , #e2d5c5);
}
.avatar .img{
    text-align:center;
}
.avatar image{
    width:160rpx;
    height:160rpx;
    border-radius:50%;
    margin-top:30rpx;
}
.avatar .uname{
    position:absolute;
    bottom:20rpx;
    width:100%;
}
.avatar text{
    text-align: center;
    display:block;
    font-weight: 600;
}
.avatar button{
    background-color:transparent;
}
.center{
    background-color:#f9f9f9;
    padding:0 16rpx 40rpx;
}
.config,.shop,.orders,.message{
    background-color:#fff;
    margin-bottom:20rpx;
}
.orders .title{
    margin:30rpx;
    padding-bottom: 20rpx;
    color:#333;
    font-weight: 700;
    border-bottom:1px solid #ccc;
}
.orders .title text{
    line-height:40rpx;
    float:right;
    color:#cacaca;
    font-size:12px;
}
.orders .order{
    padding:10rpx 20rpx 40rpx;
    justify-content: space-between;
}
.orders .order view{
    text-align:center;
    width:16%;
}
.orders image{
    width: 16px;
}
.order text{
    display:block;
    font-size:12px;
}
.config,.shop{
    padding-left:20rpx;
}
.config view,.shop view{
    padding:20rpx 0;
    margin-left:20rpx;
    border-bottom:1px solid #ddd;
}
.config view:last-child,.shop view:last-child{
    border-bottom:0;
}
.config text,.shop text{
    float:right;
    vertical-align: middle;
    margin-right:40rpx;
}