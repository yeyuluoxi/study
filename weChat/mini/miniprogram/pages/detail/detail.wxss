.btm_tool {
border-top: 1rpx solid #ccc;
position: fixed;
left: 0;
bottom: 0;
width: 100%;
height: 90rpx;
background-color: #fff;
display: flex;
}

.btm_tool .tool_item {
flex: 1;
display: flex;
flex-direction: column;
justify-content: center;
align-items: center;
font-size: 18rpx;
position: relative;
color: #696969;
}

.btm_tool .tool_item button {
position: absolute;
top: 0;
left: 0;
width: 100%;
height: 100%;
opacity: 0;
}

.btm_tool .btn_cart,
.btm_tool .btn_buy {
flex: 2;
height: 70rpx;
display: flex;
justify-content: center;
align-items: center;
color: #fff;
font-size: 28rpx;
font-weight: 400;
border-radius: 50rpx;
margin-top: 10rpx;
}

.btm_tool .btn_cart {
background: #f85;
border-top-right-radius: 0;
border-bottom-right-radius: 0;
}

.btm_tool .btn_buy {
flex: 2;
background: #f44;
border-top-left-radius: 0;
border-bottom-left-radius: 0;
}

.left-icons {
width: 40rpx;
height: 40rpx;
margin-bottom: 10rpx;
}

.left-icons image {
width: 100%;
height: 100%;
}