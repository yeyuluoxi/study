.hot{
    background-color:#ffc5bd;
    padding:30rpx;
}
.top{
    padding:20rpx 0;
    width:100%;
}
.top image{
    width:100%;
    max-width: 100%;
    max-height:280rpx;
}
.product .first{
    width:100%;
    height:280rpx;
    position:relative;
    background-color:#fff;
}
.first image{
    height:280rpx;
    width:280rpx;
}
.first .title,.first .price{
    position:absolute;
    left:300rpx;
    font-size:16px;
}
.first .title{
    color:#191919;
    top:20rpx;
    word-wrap: break-word;
    word-break: break-all;
    padding-right:20rpx;
}
.first .price{
    color:#ff5858;
    bottom:20rpx;
}
.list{
    justify-content: space-between;
}
.list .item{
    width:30%;
    background-color:#fff;
    margin-top:20rpx;
}
.item image{
    width:100%;
}
.item .text{
    padding:16rpx;
}
.text .title{
    max-height:60rpx;
    line-height: 30rpx;
    font-size:12px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.text .price{
    margin-top:20rpx;
    color:#ff5858;
    font-size:12px;
}